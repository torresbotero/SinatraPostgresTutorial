<h3>Update Item</h3>
<form action="/items/update" method="POST" id="itemform">
	<div class="form-group">
		<label for="itemNameInput">Item Name</label>
		<input type="text" id="itemNameInput" name="name" class="form-control" value="<%= @item.name %>" required/>
	</div>

	<div class="form-group">
		<label for="itemPriceInput">Item Price</label>
		<input type="text" id="itemPriceInput" name="price" class="form-control" value="<%= @item.price %>" required/>
	</div>

	<div class="form-group">
		<label for="itemGroupSelect">Group</label>
		<select id="itemGroupSelect" class="form-control" name="group_id" form="itemform" required>
		  	<% @groups.each do |group| %>
		  	<option value="<%= group.id %>" <%if group.id == @item.group.id %>selected<% end %>><%= group.name %></option>
		  	<% end %>
		</select>
	</div>

	<div class="form-group">
		<label for="itemDescriptionTxtArea">Item Description</label>
		<textarea name="description" id="itemDescriptionTxtArea" form="itemform" class="form-control" required><%= @item.description %></textarea>
	</div>

	<input type="hidden" name="id" value="<%= @item.id %>">
	<button type="submit" class="btn btn-default">Update</button>
</form>